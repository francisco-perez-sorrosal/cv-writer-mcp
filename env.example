# MCP Server Configuration
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=cv-writer-mcp

# Transport Configuration
TRANSPORT=stdio  # stdio for Claude Desktop, streamable-http for HTTP clients

# Server Configuration
HOST=localhost
PORT=8000
BASE_URL=http://localhost:8000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# LaTeX Configuration
LATEX_ENGINE=pdflatex
LATEX_TIMEOUT=30

# File Storage
OUTPUT_DIR=./output
TEMP_DIR=./temp
MAX_FILE_SIZE=10485760  # 10MB

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=*

# Development
DEV_MODE=false
